<div class="row">
  <div class="col-12">
    <%= simple_form_for([@room, Message.new], data: { action: "turbo:submit-end->messages#resetForm", messages_target: "input_form" }) do |f|%>
      <div class="input-group">
        <%= f.input :body,
         label: false,
          input_html: { placeholder: "Enter a message to send" }, wrapper_html: { class: 'form-control' },
           class: 'form-control' %>
        <%= f.submit "Send",  class: 'btn-primary btn w-100 btn-block'%>
      </div>
    <% end %>
  </div>
</div>
